( usage: git ls-tree -r --name-only HEAD | grep .py | c4 .\git-author )

: vhere ( --a ) (vhere) @ vb + ;
: pad ( --a) vhere 1000 + ;
: work-it ( -- ) // file-name is in r1
	r1 str-rtrim drop
    " git log --pretty=%aN,%as --reverse " pad str-cpy
    '"' pad str-catc r1 pad str-cat '"' pad str-catc
    " | c4 top 1" pad str-cat
    r1 qtype ." , " pad system ;
: go begin r1 256 stdin fgets 0= IF UNLOOP EXIT THEN work-it again ;
vhere 256 + s1 go
bye
